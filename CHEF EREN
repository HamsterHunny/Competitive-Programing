#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,x,y,z ;
	cin>>t;
	for (int i = 0; i < t ; i++) {
	    cin>>x>>y>>z ;
	    if (x%2==0){
	        std::cout << (x/2)*(y+z ) << std::endl;
	    }
	    else {
	        std::cout << ((x/2)+1)*(z )+(x/2)*(y ) << std::endl;
	    }
	}
	return 0;
}
