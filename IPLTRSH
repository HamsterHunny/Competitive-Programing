#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,x,y;
	cin>>t;
	for (int i = 0; i < t ; i++) {
	    /* code */
	    cin>>x>>y;
	    if (y>=x){
	        std::cout << 0 << std::endl;
	        
	    }
	    else {
	        std::cout << x-y << std::endl;
	    }
	}
	return 0;
}
